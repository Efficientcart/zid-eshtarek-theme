{
  "section_id": "uuid",
  "template": "sections/countdown.jinja",
  "name": {
    "ar": "العد التنازلي",
    "en": "Countdown Timer"
  },
  "settings": [
    {
      "id": "badge_text",
      "type": "text",
      "label": {
        "ar": "نص الشارة",
        "en": "Badge Text"
      },
      "info": {
        "ar": "اتركه فارغًا لإخفاء الشارة",
        "en": "Leave empty to hide badge"
      },
      "default": ""
    },
    {
      "id": "title",
      "type": "text",
      "label": {
        "ar": "العنوان",
        "en": "Title"
      },
      "default": ""
    },
    {
      "id": "description",
      "type": "textarea",
      "label": {
        "ar": "الوصف",
        "en": "Description"
      },
      "default": ""
    },
    {
      "id": "end_date",
      "type": "datetime-local",
      "label": {
        "ar": "تاريخ الانتهاء",
        "en": "End Date"
      },
      "info": {
        "ar": "بصيغة YYYY-MM-DD HH:MM (مثال: 2025-12-31 23:59)",
        "en": "Format: YYYY-MM-DD HH:MM (example: 2025-12-31 23:59)"
      },
      "default": ""
    },
    {
      "id": "button_text",
      "type": "text",
      "label": {
        "ar": "نص الزر",
        "en": "Button Text"
      },
      "default": ""
    },
    {
      "id": "button_url",
      "type": "url",
      "label": {
        "ar": "رابط الزر",
        "en": "Button URL"
      },
      "default": ""
    },
    {
      "id": "background_image",
      "type": "image",
      "label": {
        "ar": "صورة الخلفية",
        "en": "Background Image"
      },
      "info": {
        "ar": "اختياري",
        "en": "Optional"
      }
    },
    {
      "id": "overlay_opacity",
      "type": "range",
      "label": {
        "ar": "شفافية الطبقة",
        "en": "Overlay Opacity"
      },
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 5
    }
  ]
}
