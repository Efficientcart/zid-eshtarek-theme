{
  "name": "eshtarek-zid-theme",
  "version": "1.0.0",
  "description": "Eshtarek subscription-native theme for Zid (based on Growth theme)",
  "type": "module",
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:css": "npx @tailwindcss/cli -i assets/tailwindcss.css -o assets/styles.css --watch",
    "dev:js": "vite build --watch",
    "build": "npm-run-all build:*",
    "build:css": "npx @tailwindcss/cli -i assets/tailwindcss.css -o assets/styles.css --minify",
    "build:js": "NODE_ENV=production ENTRY=main vite build && NODE_ENV=production ENTRY=subscription vite build",
    "build:dev": "ENTRY=main vite build && ENTRY=subscription vite build",
    "format": "prettier --write \"**/*.{css,js,json,jinja,html}\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Efficientcart/zid-eshtarek-theme.git"
  },
  "keywords": ["eshtarek", "subscription", "zid", "vitrin"],
  "author": "Eshtarek",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Efficientcart/zid-eshtarek-theme/issues"
  },
  "homepage": "https://github.com/Efficientcart/zid-eshtarek-theme#readme",
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.13",
    "@tailwindcss/typography": "^0.5.19",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.6.2",
    "prettier-plugin-jinja-template": "^2.1.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4.1.13",
    "vite": "^7.3.0"
  },
  "dependencies": {
    "embla-carousel": "^8.6.0",
    "embla-carousel-auto-scroll": "^8.6.0",
    "embla-carousel-autoplay": "^8.6.0",
    "embla-carousel-fade": "^8.6.0",
    "nouislider": "^15.8.1",
    "photoswipe": "^5.4.4"
  }
}
