{# Price slider JS: assets/js/price-slider.js #}
<div class="space-y-4">
  <div
    id="{{ slider_id|default('price-slider') }}"
    class="price-range-slider"
    data-price-slider
    data-min-input="{{ min_input_id|default('price_min') }}"
    data-max-input="{{ max_input_id|default('price_max') }}"
    data-min-price="{{ min_price|default(0) }}"
    data-max-price="{{ max_price|default(20000) }}"
  ></div>
  <div class="flex items-center gap-3">
    <div class="grid flex-1 items-center gap-2">
      {% with for=min_input_id|default('price_min'), content=_("From") ~ ", " ~ session.currency %}
        {% include 'components/ui/label.jinja' %}
      {% endwith %}
      {%
        with
        id=min_input_id|default('price_min'),
        name='from_price',
        type='text',
        inputmode='numeric',
        placeholder='0'
      %}
        {% include 'components/ui/input.jinja' %}
      {% endwith %}
    </div>
    <span class="text-muted-foreground text-body1 mt-7">â€”</span>
    <div class="grid flex-1 items-center gap-2">
      {% with for=max_input_id|default('price_max'), content=_("To") ~ ", " ~ session.currency %}
        {% include 'components/ui/label.jinja' %}
      {% endwith %}
      {%
        with
        id=max_input_id|default('price_max'),
        name='to_price',
        type='text',
        inputmode='numeric',
        placeholder=_("No limit")
      %}
        {% include 'components/ui/input.jinja' %}
      {% endwith %}
    </div>
  </div>
</div>
