{#
  Wishlist Button Component

  A heart icon button that allows users to add/remove products from their wishlist.
  Uses a single button with dynamic SVG updates.

  Parameters:
  - product_id (required): The product ID
  - size (optional): Icon size (default: 'md')
  - variant (optional): Button variant (default: 'ghost')

  Usage:
  {% with product_id=product.id %}
    {% include 'components/products/wishlist-button.jinja' %}
  {% endwith %}
#}

{% if store.settings.products.wishlist_enabled == true %}
  {%
    with
    content='<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6"><path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z" /></svg>',
    variant=variant | default('ghost'),
    size=size | default('icon-md'),
    class='bg-background/10 backdrop-blur-xs '~ class,
    type='button',
    attrs='data-wishlist-btn data-product-id="' ~ product_id ~ '" aria-label="' ~ _('Add to wishlist') ~ '"'
  %}
    {% include 'components/ui/button.jinja' %}
  {% endwith %}
{% endif %}
