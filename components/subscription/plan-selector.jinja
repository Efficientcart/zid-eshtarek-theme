{#
  Subscription Plan Selector Component
  
  Renders a container that JS hydrates with plan cards from the Eshtarek API.
  Used on product page as the primary CTA replacing Add to Cart.

  Required context:
    - product: Zid product object (needs product.id)
#}

<div
  id="eshtarek-plan-selector"
  class="space-y-4"
  data-eshtarek-plans
  data-product-id="{{ product.id }}"
>
  {# Loading State #}
  <div data-plans-loading class="space-y-3">
    <div class="h-5 w-32 animate-pulse rounded bg-gray-200"></div>
    <div class="space-y-2">
      <div class="h-20 animate-pulse rounded-lg bg-gray-200"></div>
      <div class="h-20 animate-pulse rounded-lg bg-gray-200"></div>
    </div>
  </div>

  {# Error State (hidden by default) #}
  <div data-plans-error class="hidden rounded-lg border border-red-200 bg-red-50 p-4 text-center">
    <p class="text-sm text-red-600">{{ _('Something went wrong. Please try again.') }}</p>
    <button
      type="button"
      class="mt-2 text-sm font-medium text-red-700 underline"
      data-plans-retry
    >
      {{ _('Retry') }}
    </button>
  </div>

  {# Plans Container (populated by JS) #}
  <div data-plans-container class="hidden">
    {# Section Label #}
    <p class="text-foreground mb-3 text-sm font-medium">{{ _('Select Plan') }}</p>

    {# Plan Cards (rendered by JS) #}
    <div data-plans-list class="space-y-2"></div>

    {# Frequency Picker (shown when plan has multiple frequencies) #}
    <div data-frequency-picker class="mt-4 hidden">
      <p class="text-muted-foreground mb-2 text-xs font-medium uppercase tracking-wide">{{ _('Delivery Frequency') }}</p>
      <div data-frequency-options class="flex flex-wrap gap-2"></div>
    </div>

    {# Plan Summary #}
    <div data-plan-summary class="border-border-light mt-4 hidden rounded-lg border p-4">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-foreground text-sm font-medium" data-summary-plan-name></p>
          <p class="text-muted-foreground text-xs" data-summary-frequency></p>
        </div>
        <p class="text-foreground text-lg font-semibold" data-summary-price></p>
      </div>
      <div class="mt-3 flex flex-wrap gap-2">
        <span class="inline-flex items-center gap-1 text-xs text-green-600">
          <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg>
          {{ _('Cancel Anytime') }}
        </span>
        <span class="inline-flex items-center gap-1 text-xs text-green-600" data-summary-shipping>
          <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg>
          {{ _('Free Shipping') }}
        </span>
      </div>
    </div>

    {# Subscribe Button #}
    <button
      type="button"
      class="btn btn-filled btn-lg mt-4 w-full"
      data-subscribe-btn
      disabled
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="20"
        height="20"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path d="M21 12V7H5a2 2 0 0 1 0-4h14v4"></path>
        <path d="M3 5v14a2 2 0 0 0 2 2h16v-5"></path>
        <path d="M18 12a2 2 0 0 0 0 4h4v-4Z"></path>
      </svg>
      <span data-subscribe-btn-text>{{ _('Subscribe') }}</span>
      <span data-subscribe-btn-loading class="hidden">
        <svg class="size-5 animate-spin" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M21 12a9 9 0 1 1-6.219-8.56" />
        </svg>
        {{ _('Processing...') }}
      </span>
    </button>
  </div>

  {# No Plans State (hidden by default) #}
  <div data-plans-empty class="hidden rounded-lg border border-dashed p-6 text-center">
    <p class="text-muted-foreground text-sm">{{ _('No subscription plans available for this product.') }}</p>
  </div>
</div>
